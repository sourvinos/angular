{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "",
            "kebab-case"
        ],
        "max-line-length": [
            false,
            0
        ],
        "no-trailing-whitespace": false,
        "no-inferrable-types": [
            false,
            "ignore-params"
        ],
        "curly": [
            true,
            "ignore-same-line"
        ]
    }
}